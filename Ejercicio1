def calcular_cantidad_minima_sombreros(costo_fijo, costo_variable, costo_deseado):
    
    n_minimo = costo_fijo / (costo_deseado - costo_variable)
    return int(n_minimo) + 1  

def main():
    
    costo_fijo = 800  
    costo_variable = 20  
    costo_deseado = 25  

    
    cantidad_minima = calcular_cantidad_minima_sombreros(costo_fijo, costo_variable, costo_deseado)

    
    print(f"La cantidad mínima de sombreros que debe producir la fábrica es: {cantidad_minima}")

if __name__ == "__main__":
    main()
